
programa
{
	
	funcao inicio()
	{
		inteiro idade_da_pessoa
		escreva("Qual sua idade?")
		leia(idade_da_pessoa)

		se(idade_da_pessoa > 18)
		{
			escreva("voce é maior de idade!")
		}
		senao
		{
			escreva("voce é menor de idade")
		}
	}
}
